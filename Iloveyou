  <script>
    const audio = document.getElementById('musicaRomantica');
    let audioUnlocked = false;

    // Al primer toque en la p√°gina ‚Üí activa sonido
    document.addEventListener('touchstart', function unlockAudio() {
      if (!audioUnlocked) {
        audio.muted = false;
        audio.volume = 1.0;
        audio.play().catch(() => {});
        audioUnlocked = true;
        // Puedes ocultar el mensaje si quieres:
        // document.querySelector('.autoplay-msg').style.display = 'none';
      }
    }, { once: true });

    // Corazones flotando
    function createFloatingHeart() {
      const heart = document.createElement('div');
      heart.className = 'heart-float';
      heart.innerHTML = ['‚ù§Ô∏è','üíó','üíû','üíì','üíò'][Math.floor(Math.random()*5)];
      heart.style.left = Math.random() * 100 + 'vw';
      heart.style.animationDuration = (8 + Math.random() * 8) + 's';
      heart.style.animationDelay = Math.random() * 5 + 's';
      document.getElementById('heartsBg').appendChild(heart);
      setTimeout(() => heart.remove(), 20000);
    }
    setInterval(createFloatingHeart, 800);

    // Confeti
    function launchConfetti() {
      for (let i = 0; i < 80; i++) {
        const c = document.createElement('div');
        c.className = 'confetti-heart';
        c.innerHTML = ['‚ù§Ô∏è','üíñ','üíï','‚ú®','üíù'][Math.floor(Math.random()*5)];
        c.style.left = Math.random() * 100 + 'vw';
        c.style.animationDuration = (2.5 + Math.random() * 2) + 's';
        c.style.animationDelay = Math.random() * 0.8 + 's';
        document.getElementById('confetti').appendChild(c);
        setTimeout(() => c.remove(), 6000);
      }
    }

    const noMessages = [
      "Ay... ¬øsegura? ü•∫",
      "¬øDe verdad no? Me pones triste... üò¢",
      "Pero si hacemos buena pareja... üíî",
      "Piensa un poquito m√°s... porfaaa üôè",
      "Me est√°s rompiendo el corazoncito... ü•π",
      "√öltima oportunidad... ¬øs√≠? ü•∫‚ù§Ô∏è",
      "Ya casi no lo veo... pero sigo intentando üò≠",
      "Bueno... creo que perd√≠ üíîüòî"
    ];

    let noCount = 0;
    const noBtn = document.getElementById('noBtn');
    const mensaje = document.getElementById('mensaje');

    function noClick() {
      noCount++;

      let scale = 1 - (noCount * 0.18);
      if (noCount >= 5) scale -= 0.1;
      if (noCount >= 7) scale = Math.max(scale, 0.15);

      noBtn.style.transform = `scale(${scale})`;
      noBtn.style.opacity = Math.max(1 - (noCount * 0.13), 0.25);

      if (noCount >= 8) {
        noBtn.style.opacity = '0.15';
      }

      if (noCount - 1 < noMessages.length) {
        mensaje.innerHTML = noMessages[noCount - 1];
      } else {
        mensaje.innerHTML = "Ya casi desaparezco... ¬øsigues diciendo no? üòûüíî";
      }
      mensaje.classList.add('visible');
    }

    function yesClick() {
      mensaje.innerHTML = '¬°S√çIIII! Mi coraz√≥n est√° explotando de felicidad üí•‚ù§Ô∏èü•∞';
      mensaje.classList.add('visible');
      launchConfetti();
      document.body.style.background = 'linear-gradient(135deg, #ff758c 0%, #ff7eb3 100%)';

      // Activa sonido si no se hizo antes
      audio.muted = false;
      audio.volume = 1.0;
      audio.play().catch(() => {});

      noBtn.style.opacity = '0.4';
      noBtn.style.pointerEvents = 'none';
    }
  </script>

